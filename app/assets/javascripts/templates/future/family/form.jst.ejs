<div class='panel panel-with-cross'>
  <div class='form-group'>
    <label>Name</label>
    <span class="icon ask-desi" data-desi='asks' data-content="family_name"></span>
    <input name='name' type='text' value='<%= name %>'/>
  </div>
  <div class='form-group hidden'>
    <label>Email</label>
    <span class="icon ask-desi" data-desi='promises' data-content="family_email"></span>
    <input name='email' type='email'  value='<%= email %>'/>
  </div>
  <div class='form-group hidden'>
    <label>Cellphone</label>
    <input name='phone' type='text'  value='<%= phone %>'/>
  </div>
  <div class='form-group'>
    <label>Age</label>
    <input name='age' type='number' value='<%= age %>'/>
  </div>
  <div class='form-group'>
    <label>Sex</label>
    <span class="icon ask-desi" data-desi='asks' data-content='family_sex'></span>
    <input name='sex' class='select' type='text' value='<%= sex %>'/>
  </div>
  <div class='form-group'>
    <label>Annual Income</label>
    <span class="icon ask-desi" data-desi='asks' data-content='family_income'></span>
    <input name='income' class='amount' type='text' value='<%= income %>'/>

  </div>
  <span class="icon-cross"></span>
</div>