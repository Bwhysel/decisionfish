<div id='budget-walkthrough-screen'>
  <span class='icon-back' role='goto-link' href='/<%= prevStep %>'></span>
  <div class='wrapper'>
    <h1><%= title %></h1>
    <div class='wrapper-container'>
      <p class='text-center'>
        You said this need was <%= data.met ? 'MET' : 'UNMET' %>
      </p>

      <div class='panel wide-row'>
        <% if (data.monthlySavings){ %>
        <div class='form-group form-group-horizontal' role='control-msg'>
          <p>You're already making progress getting in control of your life by using Decision Fish! You intend to save <%= data.monthlySavings %> every month for emergencies and your future.</p>
        </div>
        <% } %>
        <div class='form-group form-group-horizontal'>
          <h3>
            <span>Category</span>
            <span class='normal-text'>
              <% if (data.met) { %>
                Can You Spend <strong>Less</strong> &<br/>Still Meet This Need?
              <% } else { %>
                Must You Spend <strong>More</strong> <br/>to Meet This Need?
              <% } %>
            </span>
          </h3>
        </div>
        <% _.each(data.categories, (attrs, category) => { %>
          <% var input_id = category + '_spend' %>
          <div class='form-group form-group-horizontal'>
            <label>
              <span><%= attrs.title %><br/><%= attrs.valueS %>/month<span>
              <span class='icon-question' title="<%= attrs.hint %>"></span>
            </label>
            <!--<span class='static-number'>Radio</span>-->
            <span class="ios-styled-checkbox">
              <input type="checkbox" value="None" id="<%= input_id %>" name="<%= input_id %>"/>
              <label for="<%= input_id %>"></label>
            </span>
          </div>
        <% }) %>
    </div>

    <div data-source='steps-progress'></div>
    <br/>

    <p class='wide-row justified-footer'>
      <button class='blue-button' id='next-btn' role='goto-link' href='/<%= nextStep %>'>NEXT</button>
    </p>
  </div>

</div>