body {
 margin-top: 70px;
}

#desi_footer {
  min-height: 20px;
}

/* bootstrap hack: fix content width inside hidden tabs */
.tab-content > .tab-pane:not(.active),
.pill-content > .pill-pane:not(.active) {
    display: block !important;
    height: 0 !important;
    overflow-y: hidden !important;
}
/* bootstrap hack end */

#decisions_list {
  position: relative;
}
#suggest_btn {
  position: absolute;
  background-color: #2E3192;
  color: white !important;
  border: none;
  bottom: -5px;
  right: 0px;
}
#suggest_btn:hover {
  background-color: #2e32ac;
}

.free_pro_margin {
  margin-left: 32px;
}

li.with_squircle {
  position: relative;
  list-style: none;
  margin-bottom: 5px;
  line-height: 180%;
}
li.with_squircle:before {
  content: url(<%= asset_path 'squircle_only.png' %>);
  display: block;
  position: absolute;

  zoom: 5%;
}
.text_next_to_squircle {
  margin-left: 30px;
}

.welcome_list_item {
  margin-top: 5px;
}

.btn {
 border-radius: 2px;
 /*box-shadow: 0px 0px 5px grey;*/
}

.pro-btn {
  margin-left: 20px
}

.blue_text, .blue_text:hover, .blue_text:link {
  color: #2E3192;
}

.disabled_link, .disabled_link:hover, .disabled_link:visited {
  text-decoration: none;
  color: grey;
}

.center {
  text-align: center;
}

.home_img {
  text-align: center;
}



.question_page {
  position: relative;
  height: 380px;
}

.left_question_btn {
  position: absolute;
  left: 5px;
  bottom: 5px;
}

.right_question_btn {
  position: absolute;
  right: 5px;
  bottom: 5px;
}

.nav-btns {
  position: relative;
}

.left_nav_btn {
  position: absolute;
  left: 5px;
}
.right_nav_btn {
  position: absolute;
  right: 5px;
}
.rigth_nav_btn_fixed {
  position: fixed;
  bottom: 5px;
  right: 5px;
}
.left_nav_btn_fixed {
  position: fixed;
  bottom: 5px;
  left: 5px;
}

table {
  border-collapse: separate;
  border-spacing: 20px 5px;
}

table.with_signs {
  border-collapse: separate;
  border-spacing: 0 5px;
}

.df_suggests_container {
 clear: both;
 float: right;
 padding-left: 55px;
 margin-bottom: 40px;
 margin-top: 40px;
 position: relative;
}
.df_suggests_container:before {
  content: url(<%= asset_path 'you_can_afford_fish.png' %>);
  display: block;
  position: absolute;
  left: -50px;
  bottom: -30px;
  zoom: 80%;
}

.banks_may_tell_container {
  float: left;
  position: relative;
}
.banks_may_tell_container:before {
  content: url(<%= asset_path 'bank_shark.png' %>);
  display: block;
  position: absolute;
  right: -120px;
  top: -15px;
  zoom: 80%;
}

#survey_btn {
  text-align: center;
  position: relative;
  margin-left: 50px;
  border: none;
  background-color: #551a8b;
  color: white;
}
#survey_btn:hover {
  background-color: rgb(104, 39, 154);
}
#survey_btn:before {
  content: url(<%= asset_path 'take_survey.png' %>);
  position: absolute;
  display: block;
  zoom: 50%;
  right: 290px;
  top: -65px;
}
#survey_text {
  margin-left: 80px;
}

/*table.where_update {
