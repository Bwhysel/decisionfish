  zoom: 10%;
  bottom: 30px;
  left: 0px;
}
.detailed_results_item.other_scenarios_home_price:before {
  bottom: 90px;
}

 #no_conflicts_list_item {
   position: relative;
 }
 #no_conflicts_list_item:after {
   padding: 30px;
   position: absolute;
   content: url(<%= asset_path 'tooltip_sign.png' %>);
   zoom: 10%;
   bottom: 40px;

 }


.question_title, .banks_may_tell_text, .decision_fish_suggests_text, .loose_job_text {
  position: relative;
}
.question_title:after, .banks_may_tell_text:after, .decision_fish_suggests_text:after, .loose_job_text:after {
  padding: 30px;
  position: absolute;
  content: url(<%= asset_path 'tooltip_sign.png' %>);
  zoom: 10%;
  bottom: 30px;
}


.var_with_tooltip {
  position: relative;
}
.var_with_tooltip:after {
  padding: 30px;
  position: absolute;
  content: url(<%= asset_path 'tooltip_sign.png' %>);
  zoom: 10%;
  bottom: 30px;
}

.var_with_tooltip.var_assumptions {
  position: relative;
  padding-left: 15px;
}
.var_with_tooltip.var_assumptions:after {
  padding: 0px;
  position: absolute;
  content: url(<%= asset_path 'tooltip_sign.png' %>);
  left:0px;
  top: 30px;
}

.assumptions_home_price {
  position: relative;
  padding-left: 15px;
}
.assumptions_home_price:before {
  position: absolute;
  content: url(<%= asset_path 'tooltip_sign.png' %>);
  zoom: 10%;
  left: 0px;
  top: 30px;
}

.you_decide_text {
  position: relative;
}
.you_decide_text:after {
  position: absolute;
  content: url(<%= asset_path 'tooltip_sign.png' %>);
  zoom: 10%;
}

