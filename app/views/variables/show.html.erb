<div class="question_page">
<div class="center">
  <%= set_step_title(@variable).html_safe %>

  <br>
  <div>
    <h5 class="blue_text question_title" data-toggle="tooltip" data-placement="bottom" title="<%= set_tooltip(@variable) %>"><%= "#{@variable.order}."%> <%= @variable.title.html_safe %></h5>
    <p><%= @variable.description.html_safe %></p>
  </div>
  <br>

  <% if @variable.order == 5 %>
    <%= simple_form_for :variable_value,
                        url: free_result_table_decision_variables_path(decision_id: @decision.id,
                                                    id: @variable.id),
                        method: :get do |f| %>
                        <%= f.input :variable_id, :as => :hidden, :input_html => { :value => @variable.id } %>

      <%= render 'form', :f => f %>
    <% end %>
  <% else %>
    <%= simple_form_for :variable_value,
                        url: decision_variable_path(decision_id: @decision.id,
                                                    id: @next_variable.id),
                        method: :get do |f| %>
                       <%= render 'form', :f => f %>
    <% end %>
  <% end %>
</div>
</div>
