<p id="notice"><%= notice %></p>

<h1>Ideas</h1>

<table class='table-with-entity'>
  <thead>
    <tr>
      <th>Need</th>
      <th>Saves money</th>
      <th>Content</th>
      <th>User</th>
      <th>User name</th>
      <th>User email</th>
      <th>Likes count</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.need %></td>
        <td><%= idea.saves_money_s %></td>
        <td><%= idea.content %></td>
        <td><%= idea.user_id %></td>
        <td><%= idea.user_name %></td>
        <td><%= idea.user_email %></td>
        <td><%= idea.likes.count %></td>



        <td><%= link_to 'Show', [:admin, idea] %></td>
        <td><%= link_to 'Edit', edit_admin_idea_path(idea), role: 'edit-link' %></td>
        <td><%= link_to 'Destroy', [:admin, idea], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

